<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" styleClass="background" stylesheets="@base16-google-dark.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ufrpeuag.gastromaster.ui.TelaCardapioEdicaoControlador">
   <children>
      <Label text="Cardápio" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
      <Label layoutX="10.0" layoutY="55.0" text="Nome" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="55.0" />
      <Label layoutX="11.0" layoutY="105.0" text="Preço" AnchorPane.leftAnchor="11.0" AnchorPane.topAnchor="105.0" />
      <TextField fx:id="nomeFieldCardapio" prefHeight="30.0" prefWidth="206.0" promptText="Preencha apenas se desejar alterar" style="-fx-font-size: 12;" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0" />
      <TextField fx:id="precoFieldCardapio" prefHeight="30.0" prefWidth="206.0" promptText="Preço" style="-fx-font-size: 12;" text="0.10" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0" />
      <HBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="30.0">
         <children>
            <Button fx:id="concluirCardapioEdicao" mnemonicParsing="false" onAction="#handleConcluirEdicao" text="Concluir" />
            <Button fx:id="cancelarCardapioEdicao" mnemonicParsing="false" onAction="#handleCancelar" style="-fx-background-color: #7f1215;" text="Cancelar" />
         </children>
      </HBox>
   </children>
</AnchorPane>
