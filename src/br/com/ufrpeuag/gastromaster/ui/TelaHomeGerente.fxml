<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" styleClass="background" stylesheets="@base16-google-dark.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ufrpeuag.gastromaster.ui.TelaHomeGerenteControlador">
   <top>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="800.0" styleClass="label-header" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="800.0" spacing="30.0" styleClass="label-header" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="funcionarios" mnemonicParsing="false" onAction="#handleTelaFuncionarios" style="-fx-background-color: #9e181b; -fx-border-color: #9e181b;" text="Funcionários">
                     <graphic>
                        <ImageView fitHeight="90.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/pessoa.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="mesas" mnemonicParsing="false" onAction="#handleTelaMesas" style="-fx-background-color: #9e181b; -fx-border-color: #9e181b;" text="Mesas">
                     <graphic>
                        <ImageView fitHeight="90.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/mesas.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="cardapio" mnemonicParsing="false" onAction="#handleTelaCardapio" style="-fx-background-color: #9e181b; -fx-border-color: #9e181b;" text="Cardápio">
                     <graphic>
                        <ImageView fitHeight="90.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/cardapio.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="estoque" mnemonicParsing="false" onAction="#handleTelaEstoque" style="-fx-background-color: #9e181b; -fx-border-color: #9e181b;" text="Estoque">
                     <graphic>
                        <ImageView fitHeight="90.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/caminhao.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="relatorios" mnemonicParsing="false" onAction="#handleTelaRelatorios" style="-fx-background-color: #9e181b; -fx-border-color: #9e181b;" text="Relatórios">
                     <graphic>
                        <ImageView fitHeight="90.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/grafico.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>
</BorderPane>
